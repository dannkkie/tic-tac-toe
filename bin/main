#!/usr/bin/env ruby

# frozen_string_literal: true

# Welcome Message
puts "Ruby Tic Tac Toe"

# Request for player names and save them to p1 and p2
print "Player 1 please enter your name: "
player1 = gets.chomp

print "Player 2 please enter your name: "
player2 = gets.chomp

puts "\n\n#{player1} will be presented by X"
puts "#{player2} will be presented by O\n\n"